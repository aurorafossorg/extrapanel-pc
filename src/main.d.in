module main;

import std.string;
import std.path;
import std.stdio;

import gio.Resource;
import gtk.Main;

import app.app;
import util.config;

string pkgdatadir = "@pkgdatadir@";

void main (string[] args)
{
    writeln("Starting extrapanel...");

    auto resource = Resource.load(buildPath(pkgdatadir,
                                            "org.aurorafoss.extrapanel.gresource"));
    Resource.register(resource);

    Configuration.appArgs = args;

    string[] s;
    Main.init(s);
    auto app = new ExtraPanelGUI();
    app.run(s);
}
